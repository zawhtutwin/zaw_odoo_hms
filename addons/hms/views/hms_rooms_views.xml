<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hms_rooms_view_list" model="ir.ui.view">
        <field name="name">_view_list</field>
        <field name="model">hms.rooms</field>
        <field name="arch" type="xml">
            <list string="rooms_list">
                <field name="name"/>
                <field name="hotel_id"/>
                <field name="type_id" widget="badge" decoration-info="type_id == 'normal'"
                       decoration-warning="type_id=='vip'"
                       decoration-success="type_id=='vvip'"/>
            </list>
        </field>
    </record>


    <record id="hms_rooms_view_form" model="ir.ui.view">
        <field name="name">_view_form</field>
        <field name="model">hms.rooms</field>
        <field name="arch" type="xml">
            <form string="rooms_form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="hotel_id"/>
                        </group>
                        <group>
                            <field name="type_id" widget="radio"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action to open the model -->
    <record id="action_hms_rooms" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">hms.rooms</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu item -->

</odoo>